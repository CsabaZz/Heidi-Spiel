<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@color/red">
	<TextView android:id="@+id/category_chooser_title" android:text="@string/categoryChooserTitle" 
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:gravity="bottom|center_horizontal" android:layout_margin="40dp"
	    android:textSize="24sp" android:textColor="@color/black"/>
	<ListView android:id="@+id/category_chooser_list" android:fastScrollEnabled="false" 
	    android:layout_width="match_parent" android:layout_height="match_parent" 
	    android:cacheColorHint="#00000000" android:fadingEdge="none"
		android:divider="@null" android:dividerHeight="0dp"/>
</LinearLayout>

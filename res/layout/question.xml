<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<ImageView android:id="@+id/question_image" 
	    android:layout_width="200dp" android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true" android:layout_alignTop="@+id/question_answer_1"/>
	<Button android:id="@+id/question_answer_3" 
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:layout_toRightOf="@+id/question_image" android:layout_alignParentRight="true" 
	    android:layout_alignParentBottom="true" />
	<Button android:id="@+id/question_answer_2" 
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:layout_toRightOf="@+id/question_image" android:layout_alignParentRight="true" 
	    android:layout_above="@+id/question_answer_3" />
	<Button android:id="@+id/question_answer_1" 
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:layout_toRightOf="@+id/question_image" android:layout_alignParentRight="true" 
	    android:layout_above="@+id/question_answer_2" />
	<TextView android:id="@+id/question_text" 
	    android:layout_width="match_parent" android:layout_height="wrap_content" 
	    android:gravity="center_horizontal"/>
	<ImageView android:id="@+id/question_space_holder" 
	    android:layout_width="match_parent" android:layout_height="match_parent" 
	    android:layout_below="@+id/question_text" android:layout_above="@+id/question_image"/>
</RelativeLayout>
